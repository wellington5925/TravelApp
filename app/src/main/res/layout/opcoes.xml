<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.senacsp.travelapp.SingUp_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/gradientebackground"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/circulo"
                android:src="@drawable/img_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Abdallah"
                android:textColor="#FFF"
                android:textSize="21sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Egypt"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="490dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cloud_queue_black_dp"
                    android:text="Social Networks"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:id="@+id/travel"
                    android:layout_below="@+id/social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_import_contacts_black_dp"
                    android:text="Travel guide"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/notificacao"
                    android:layout_below="@+id/travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_notifications_active_black_dp"
                    android:text="Notification"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/ajuda"
                    android:layout_below="@+id/notificacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_donut_large_black_24dp"
                    android:text="Help"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/feed"
                    android:layout_below="@+id/ajuda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_flight_black_dp"
                    android:text="Feedback"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>
