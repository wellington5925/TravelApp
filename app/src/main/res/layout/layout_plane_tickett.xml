<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senacsp.travelapp.PlaneTickettActivity">

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gradientebackground"
        />
    <ImageView
        android:id="@+id/aviao"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_flight_takeoff_black_dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circulo"
        android:layout_marginTop="100dp"/>
    <Button
        android:id="@+id/round"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoum"
        android:text="Round"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_below="@+id/aviao"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoum"
        android:text="One Way"
        android:textAllCaps="false"
        android:layout_marginLeft="135dp"
        android:textColor="#fff"
        android:layout_below="@+id/aviao"/>
    <Button

        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoum"
        android:text="Multi"
        android:textAllCaps="false"
        android:layout_marginLeft="275dp"
        android:textColor="#fff"
        android:layout_below="@+id/aviao"/>

    <EditText
        android:id="@+id/from"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:hint="From"
        android:drawableLeft="@drawable/ic_location_on_black_dp"
        android:layout_below="@+id/round"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/date"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:hint="Derpature date"
        android:drawableLeft="@drawable/ic_location_on_black_dp"
        android:layout_below="@+id/from"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/number"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:hint="Number of passenger"
        android:drawableLeft="@drawable/ic_location_on_black_dp"
        android:layout_below="@+id/date"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/to"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:hint="To"
        android:drawableLeft="@drawable/ic_location_on_black_dp"
        android:layout_below="@+id/round"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/returnda"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:hint="Return date"
        android:drawableLeft="@drawable/ic_location_on_black_dp"
        android:layout_below="@+id/from"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/classfli"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:hint="Fligth Class"
        android:drawableLeft="@drawable/ic_location_on_black_dp"
        android:layout_below="@+id/date"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More details"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="480dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:background="@drawable/botaoum"
        android:layout_below="@+id/more"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Search flights"
        android:textAllCaps="false"
        />



</RelativeLayout>
